{
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.preferences.importModuleSpecifier": "project-relative",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "editor.formatOnSave": true,
  "eslint.format.enable": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "eslint.validate": [
    "markdown",
    "javascript",
    "typescript"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.quickSuggestionsDelay": 10,
  "editor.suggestOnTriggerCharacters": true,
  "editor.tabCompletion": "off",
  "editor.suggest.localityBonus": true,
  "editor.suggestSelection": "recentlyUsed",
  "editor.wordBasedSuggestions": true,
  "editor.parameterHints.enabled": true,
  "files.watcherExclude": {
    "**/target": true
  },
  "files.insertFinalNewline": true,
  "nixEnvSelector.nixFile": "${workspaceRoot}/flake.nix",
  "testing.automaticallyOpenPeekView": "never",
  "files.exclude": {
    "packages/platform-node/src": true,
    "packages/platform-node/dist": true,
    "packages/platform-node/internal": true,
    "packages/platform-node/Command": true,
    "packages/platform-node/CommandExecutor": true,
    "packages/platform-node/Effectify": true,
    "packages/platform-node/Error": true,
    "packages/platform-node/FileSystem": true,
    "packages/platform-node/Http": true,
    "packages/platform-node/HttpClient": true,
    "packages/platform-node/HttpServer": true,
    "packages/platform-node/KeyValueStore": true,
    "packages/platform-node/NodeContext": true,
    "packages/platform-node/Path": true,
    "packages/platform-node/Runtime": true,
    "packages/platform-node/Sink": true,
    "packages/platform-node/Stream": true,
    "packages/platform-bun/src": true,
    "packages/platform-bun/dist": true,
    "packages/platform-bun/internal": true,
    "packages/platform-bun/BunContext": true,
    "packages/platform-bun/Command": true,
    "packages/platform-bun/CommandExecutor": true,
    "packages/platform-bun/Effectify": true,
    "packages/platform-bun/Error": true,
    "packages/platform-bun/FileSystem": true,
    "packages/platform-bun/Http": true,
    "packages/platform-bun/HttpClient": true,
    "packages/platform-bun/HttpServer": true,
    "packages/platform-bun/KeyValueStore": true,
    "packages/platform-bun/Path": true,
    "packages/platform-bun/Runtime": true,
    "packages/platform-bun/Sink": true,
    "packages/platform-bun/Stream": true,
    "packages/platform-browser/src": true,
    "packages/platform-browser/dist": true,
    "packages/platform-browser/internal": true,
    "packages/platform-browser/Clipboard": true,
    "packages/platform-browser/Effectify": true,
    "packages/platform-browser/Error": true,
    "packages/platform-browser/HttpClient": true,
    "packages/platform-browser/KeyValueStore": true,
    "packages/platform-browser/Path": true,
    "packages/platform-browser/Runtime": true,
    "packages/platform/src": true,
    "packages/platform/dist": true,
    "packages/platform/internal": true,
    "packages/platform/Command": true,
    "packages/platform/CommandExecutor": true,
    "packages/platform/Effectify": true,
    "packages/platform/Error": true,
    "packages/platform/FileSystem": true,
    "packages/platform/Http": true,
    "packages/platform/HttpClient": true,
    "packages/platform/HttpServer": true,
    "packages/platform/KeyValueStore": true,
    "packages/platform/Path": true,
    "packages/platform/Runtime": true
  }
}
