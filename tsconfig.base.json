{
  "compilerOptions": {
    "moduleDetection": "force",
    "composite": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveSymlinks": true,
    "moduleResolution": "Bundler",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "sourceMap": true,
    "declarationMap": true,
    "strict": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": false,
    "noErrorTruncation": true,
    "allowJs": false,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": false,
    "strictNullChecks": true,
    "target": "ES2021",
    "module": "ESNext",
    "incremental": true,
    "removeComments": false,
    "baseUrl": ".",
    "paths": {
      "@effect/platform/test/*": ["./packages/platform/test/*"],
      "@effect/platform/*": ["./packages/platform/src/*.ts"],

      "@effect/platform-bun/test/*": ["./packages/platform-bun/test/*.ts"],
      "@effect/platform-bun/*": ["./packages/platform-bun/src/*.ts"],

      "@effect/platform-browser/test/*": [
        "./packages/platform-browser/test/*.ts"
      ],
      "@effect/platform-browser/*": ["./packages/platform-browser/src/*.ts"],

      "@effect/platform-node/test/*": ["./packages/platform-node/test/*.ts"],
      "@effect/platform-node/*": ["./packages/platform-node/src/*.ts"]
    },
    "types": ["vitest/globals"],
    "plugins": [{ "name": "@effect/language-service" }]
  }
}
