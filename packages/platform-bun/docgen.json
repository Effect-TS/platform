      "@effect/platform-node": ["../platform-node/src/index.js"],
      "@effect/platform-node/*": ["../platform-node/src/*.js"]
    }
  },
  "examplesCompilerOptions": {
    "strict": true,
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "paths": {
      "@effect/platform": ["../platform/src/index.js"],
      "@effect/platform/*": ["../platform/src/*.js"],
      "@effect/platform-node": ["../platform-node/src/index.js"],
      "@effect/platform-node/*": ["../platform-node/src/*.js"]
    }
  }
}
